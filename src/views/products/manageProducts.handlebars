{{#if isValid}}
<div>
    <h2>Products</h2>
    <div>
        <nav aria-label="Page navigation example" style="font-weight: bold;">
            <ul class="pagination">
                
                <li class="page-item"><a class="page-link" {{#if hasPrevPage}}href="{{prevLink}}"{{/if}}>Prev</a></li>
                
                <p class="page-link" style="color: black;">{{page}}</p>
                
                <li class="page-item"><a class="page-link" {{#if hasNextPage}}href="{{nextLink}}"{{/if}}>Next</a></li>
                
            </ul>
        </nav>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="cool">Title</th>
                <th scope="cool">Description</th>
                <th scope="cool">Price</th>
                <th scope="cool">Code</th>
                <th scope="cool">Stock</th>
                <th scope="cool">Status</th>
                <th scope="cool">Category</th>
                <th scope="cool"></th>
            </tr>
        </thead>

        <tbody>
            {{#each docs}}
                <tr>
                    <th scope="row"> {{this.title}} </th>
                    <th> {{this.description}} </th>
                    <th> {{this.price}} </th>
                    <th> {{this.code}} </th>
                    <th> {{this.stock}} </th>
                    <th> {{this.status}} </th>
                    <th> {{this.category}} </th>
                    <th> 
                        {{#ifUnequals ../user.role 'admin' }}
                            {{#ifEquals ../user.email this.owner }}
                                <button class="btn btn-danger deleteProductButton" data-product-id="{{this._id}}" data-product-owner="{{this.owner}}">Delete</button> 
                            {{/ifEquals}}
                        {{/ifUnequals}}

                        {{#ifEquals ../user.role 'admin'}}
                            <button class="btn btn-danger deleteProductButton" data-product-id="{{this._id}}" data-product-owner="{{this.owner}}">Delete</button>
                        {{/ifEquals}}
                    </th>
                </tr>
            {{/each}}
        </tbody>

    </table>
</div>
{{else}}
<h2>No Products</h2>
{{/if}}

<script src="/js/products.js"></script>